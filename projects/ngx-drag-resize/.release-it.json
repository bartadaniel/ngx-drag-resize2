{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "after:bump": ["npm run prepublish"]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "publishPath": "../../dist/ngx-drag-resize"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md"
    }
  }
}
